<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.bubble.retrotickets.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EventsController</servlet-name>
        <servlet-class>com.bubble.retrotickets.EventsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventsController</servlet-name>
        <url-pattern>/events</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventsController</servlet-name>
        <url-pattern>/events/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SeatsController</servlet-name>
        <servlet-class>com.bubble.retrotickets.SeatsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SeatsController</servlet-name>
        <url-pattern>/seats</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DiscountsController</servlet-name>
        <servlet-class>com.bubble.retrotickets.DiscountsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiscountsController</servlet-name>
        <url-pattern>/discounts</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>DbUrl</param-name>
        <param-value>jdbc:derby://localhost:1527/RetroTicketsDB</param-value>
    </context-param>
    <context-param>
        <param-name>DbUser</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>DbPass</param-name>
        <param-value>admin</param-value>
    </context-param>
</web-app>