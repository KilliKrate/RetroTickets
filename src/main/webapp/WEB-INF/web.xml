<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- CONTEXT PARAMETERS -->
    <context-param>
        <param-name>DbUrl</param-name>
        <param-value>jdbc:derby://localhost:1527/RetroTicketsDB</param-value>
    </context-param>
    <context-param>
        <param-name>DbUser</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>DbPass</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>appPath</param-name>
        <param-value>/RetroTickets_war_exploded</param-value>
    </context-param>

    <!-- SERVLETS AND SERVLET MAPPINGS -->

    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.bubble.retrotickets.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EventsController</servlet-name>
        <servlet-class>com.bubble.retrotickets.EventsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventsController</servlet-name>
        <url-pattern>/events</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventsController</servlet-name>
        <url-pattern>/events/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SeatsController</servlet-name>
        <servlet-class>com.bubble.retrotickets.SeatsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SeatsController</servlet-name>
        <url-pattern>/seats</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccessController</servlet-name>
        <servlet-class>com.bubble.retrotickets.AccessController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccessController</servlet-name>
        <url-pattern>/auth</url-pattern>
        <url-pattern>/auth/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccessPagesController</servlet-name>
        <servlet-class>com.bubble.retrotickets.AccessPagesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccessPagesController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccessPagesController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccessPagesController</servlet-name>
        <url-pattern>/register-confirm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserPageController</servlet-name>
        <servlet-class>com.bubble.retrotickets.UserPageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserPageController</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardController</servlet-name>
        <servlet-class>com.bubble.retrotickets.DashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/manageUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/manageEvents</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/manageEvents/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DiscountsController</servlet-name>
        <servlet-class>com.bubble.retrotickets.DiscountsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiscountsController</servlet-name>
        <url-pattern>/discounts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PurchaseController</servlet-name>
        <servlet-class>com.bubble.retrotickets.PurchaseController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PurchaseController</servlet-name>
        <url-pattern>/purchase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseController</servlet-name>
        <url-pattern>/confirmation</url-pattern>
    </servlet-mapping>

    <!-- FILTERS AND FILTER MAPPINGS -->

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.bubble.retrotickets.AuthenticationFilter</filter-class>
        <init-param>
            <param-name>DbUrl</param-name>
            <param-value>jdbc:derby://localhost:1527/RetroTicketsDB</param-value>
        </init-param>
        <init-param>
            <param-name>DbUser</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>DbPass</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>appPath</param-name>
            <param-value>/RetroTickets_war_exploded</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/manageUsers</url-pattern>
        <url-pattern>/manageEvents</url-pattern>
        <url-pattern>/manageEvents/*</url-pattern>
        <url-pattern>/users</url-pattern>
        <url-pattern>/purchase</url-pattern>
        <url-pattern>/confirmation</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.bubble.retrotickets.AuthorizationFilter</filter-class>
        <init-param>
            <param-name>DbUrl</param-name>
            <param-value>jdbc:derby://localhost:1527/RetroTicketsDB</param-value>
        </init-param>
        <init-param>
            <param-name>DbUser</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>DbPass</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>appPath</param-name>
            <param-value>/RetroTickets_war_exploded</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/manageUsers</url-pattern>
        <url-pattern>/manageEvents</url-pattern>
        <url-pattern>/manageEvents/*</url-pattern>
        <url-pattern>/users</url-pattern>
    </filter-mapping>
</web-app>